<Window x:Class="WpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="System Login" HorizontalAlignment="Center" Margin="0,37,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label Content="Email Address:" HorizontalAlignment="Left" Margin="119,129,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="262,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="366" Height="31" Text="admin@CompanyName.com"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="119,0,0,0" VerticalAlignment="Center" FontSize="20"/>

        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="262,258,0,0" VerticalAlignment="Top" Height="31" Width="83" FontSize="20" Click="btnLogin_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Left" Margin="545,258,0,0" VerticalAlignment="Top" Height="31" Width="83" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="262,0,0,0" VerticalAlignment="Center" Width="366" Height="24" Password="@1"/>

    </Grid>
</Window>
