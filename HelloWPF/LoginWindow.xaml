<Window x:Class="HelloWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.492,0.474">
        <Label Content="Màn hình đăng nhập" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" FontSize="24" Background="#FFF90F0F" Foreground="#FF13E8F9"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="169,345,0,0" VerticalAlignment="Top" Height="42" Width="119" FontSize="24" RenderTransformOrigin="-0.566,0.917" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Đăng xuất" HorizontalAlignment="Left" Margin="470,344,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.516,-0.225" Height="43" Width="125" FontSize="24" Click="btnThoat_Click"/>
        <Label Content="Username: " HorizontalAlignment="Left" Margin="168,188,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="168,261,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="295,265,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="337" FontSize="20" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="295,192,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="337" FontSize="20"/>

    </Grid>
</Window>
