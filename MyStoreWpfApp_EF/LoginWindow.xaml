<Window x:Class="MyStoreWpfApp_EF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyStoreWpfApp_EF"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="450" Width="800">
    <Grid>
        <Label Content="Đăng nhập hệ thống" HorizontalAlignment="Left" Margin="320,118,0,0" VerticalAlignment="Top" Width="119" Height="45">
            <Label.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Yellow" Offset="0.0"></GradientStop>
                    <GradientStop Color="Orange" Offset="0.5"></GradientStop>
                    <GradientStop Color="Purple" Offset="1.0"></GradientStop>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Button x:Name="btnDangNhap" Content="Đăng Nhập" HorizontalAlignment="Left" Margin="299,250,0,0" VerticalAlignment="Top" Click="btnDangNhap_Click" RenderTransformOrigin="0.848,0.353"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="457,250,0,0" VerticalAlignment="Top" Width="54"/>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="251,178,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="240,213,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.521,0.456"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="320,217,0,0" VerticalAlignment="Top" Width="212" Password="@1"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="320,182,0,0" TextWrapping="Wrap" Text="admin@CompanyName.com" VerticalAlignment="Top" Width="212" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
