<Window x:Class="WpfApp_EF_IO2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_EF_IO2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Name="mnuSystem" Header="System">
                <MenuItem Name="mnuSystemChangePassword" Header="Change Password"/>
                <MenuItem Name="mnuSystemViewInfo" Header="View account info" />
                <Separator/>
                <MenuItem Name="mnuSystemExit" Header="Exit"/>
            </MenuItem>
            <MenuItem Name="mnuManage" Header="Manage">
                <MenuItem Name="mnuManageAccount" Header="Account"/>
                <MenuItem Name="mnuManageCategory" Header="Category"/>
                <MenuItem Name="mnuManageProduct" Header="Product"/>
            </MenuItem>
            <MenuItem Name="mnuReport" Header="Report">
                <MenuItem Name="mnuReportRevenue" Header="Revenue Report"/>
                <MenuItem Name="mnuReportInventory" Header="Inventory Report"/>
            </MenuItem>
            <MenuItem Name="mnuHelp" Header="Trợ giúp">
                
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
